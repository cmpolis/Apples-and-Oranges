html(lang="en")
  head
    title Apples to Apples
    script(type="text/javascript", src="http://cdn.socket.io/stable/socket.io.js")
    script(type="text/javascript", src="http://code.jquery.com/jquery-1.6.1.min.js")
    script(type="text/javascript")
      var socket = new io.Socket(null, {port: 3001});
      socket.connect();
      socket.on('message', function(msg){ 
        if(msg.event == 'new_card') {
          $("#my_nouns").append('<li>'+msg.data+'</li>');
        } else { alert(msg) }
        });
             
  body
    h1 Apples
    ul#my_nouns 

